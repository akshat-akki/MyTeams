<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EngageTeams" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomChatSDKTheme" parent="ChatSDKTheme">
        <item name="colorPrimary">@color/font_blue</item>
        <item name="colorAccent">#5887F9</item>
        <item name="actionBarBackgroundColor">#CC36499C</item>
        <item name="actionBarTextColor">@color/white
        </item>
        <item name="systemDefaultBubbleColor">#5887F9</item>
        <item name="systemMessageBubbleDrawable">@drawable/chatbubble</item>
        <item name="incomingBubbleDrawable">@drawable/chatbubble</item>
        <item name="incomingIconDrawable">@drawable/chatbubble</item>
        <item name="outcomingBubbleDrawable">@drawable/chatbubble</item>
        <item name="incomingUserNameTextColor">@color/red</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/red</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>

